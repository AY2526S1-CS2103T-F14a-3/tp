<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Statistics" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@StatsWindow.css" />
      </stylesheets>

      <HBox alignment="CENTER">
        <children>
          <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
              <Label fx:id="statsMessage" text="Label" wrapText="true">
                <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </padding>
              </Label>
            </content>
          </ScrollPane>
        </children>
        <padding>
          <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
